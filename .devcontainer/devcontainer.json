{
  // Open port 3000 by default
  "appPort": 3000,
  // Install ESLint and Peacock extensions
  "extensions": [
    "dbaeumer.vscode-eslint",
    "johnpapa.vscode-peacock"
  ],
  // Set remote color for Peacock
  "settings": {
    "peacock.remoteColor": "#0078D7"
  },
  // Docker config
  "dockerFile": "Dockerfile"
}
